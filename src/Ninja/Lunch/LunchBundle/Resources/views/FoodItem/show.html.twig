{% extends "NinjaLunchBundle::layout.base.twig" %}
{% block headline %}
Food ITem
{% endblock %}
{% block content %}
<table class="record_properties table-hover table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ entity.price }}</td>
        </tr>
    </tbody>
</table>

<div class="record_actions btn-group">
    <a href="{{ path('admin_food') }}" class="btn">
        Back to the list
    </a>
    <a href="{{ path('admin_food_edit', { 'id': entity.id }) }}" class="btn">
        Edit
    </a>
    <form action="{{ path('admin_food_delete', { 'id': entity.id }) }}" method="post" class="btn">
        {{ form_widget(delete_form) }}
        <button type="submit">Delete</button>
    </form>
</div>
{% endblock %}
