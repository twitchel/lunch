{% extends "NinjaLunchBundle::layout.base.twig" %}
{% block headline %}
Food Item List
{% endblock %}
{% block content %}
<table class="records_list table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_food_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>${{ entity.price | number_format(2) }}</td>
            <td>
                <div class="btn-group">
                    <a href="{{ path('admin_food_show', { 'id': entity.id }) }}" class="btn">show</a>
                    <a href="{{ path('admin_food_edit', { 'id': entity.id }) }}" class="btn">edit</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="btn-group">
    <a href="{{ path('admin_food_new') }}" class="btn">
        Create a new entry
    </a>
</div>
{% endblock %}
