{% extends "NinjaLunchBundle::layout.base.twig" %}
{% block headline %}
Viewing item {{ entity.item }}
{% endblock %}
{% block content %}
<table class="record_properties table table-hover">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Comments</th>
            <td>{{ entity.comments }}</td>
        </tr>
        <tr>
            <th>Item</th>
            <td>{{ entity.item }}</td>
        </tr>
        <tr>
            <th>User</th>
            <td>{{ entity.user }}</td>
        </tr>
    </tbody>
</table>

<div class="record_actions btn-group">
    <a href="{{ path('order_items') }}" class="btn">
        Back to the list
    </a>
    <a href="{{ path('orders_show', { 'id': entity.order.id }) }}" class="btn">
        Back to Order
    </a>
    <a href="{{ path('order_items_edit', { 'item': entity.id }) }}" class="btn">
        Edit
    </a>
    <div>
        <form action="{{ path('order_items_delete', { 'item': entity.id }) }}" method="post" class="btn">
            {{ form_widget(delete_form) }}
            <input type="submit" value="delete" />
        </form>
    </div>
</div>

{% endblock %}
