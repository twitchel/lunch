{% extends "NinjaLunchBundle::layout.base.twig" %}
{% block headline %}
User
{% endblock %}
{% block content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>Usernamecanonical</th>
            <td>{{ entity.usernameCanonical }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Emailcanonical</th>
            <td>{{ entity.emailCanonical }}</td>
        </tr>
        <tr>
            <th>Enabled</th>
            <td>{{ entity.enabled }}</td>
        </tr>
        <tr>
            <th>Salt</th>
            <td>{{ entity.salt }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ entity.password }}</td>
        </tr>
        <tr>
            <th>Lastlogin</th>
            <td>{{ entity.lastLogin|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Locked</th>
            <td>{{ entity.locked }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ entity.roles | join(', ')}}</td>
        </tr>
        <tr>
            <th>Avatarname</th>
            <td>{{ entity.avatarName }}</td>
        </tr>
    </tbody>
</table>

<div class="record_actions btn-group">
    <a href="{{ path('admin_user') }}" class="btn">
        Back to the list
    </a>
    <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}" class="btn">
        Edit
    </a>
</div>
{% endblock %}
